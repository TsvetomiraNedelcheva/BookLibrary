@model BookSearchViewModel

<form method="get">
    <div class="row">
        <div class="form-group col-md-3 mt-0">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="GenreType"></label>
            <select class="form-control" asp-for="GenreType">
                @foreach
                    (var genre in Model.GenreTypes){
                        <option value="@genre">@genre</option>
                    }
            </select>
        </div>
        <div class="form-group col-md-3">
            <input type="submit" class="btn btn-primary d-none" />
        </div>
    </div>
</form>

<h1 class="text-center">Browse Books</h1>
