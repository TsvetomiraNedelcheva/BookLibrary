@model IEnumerable<AllBooksViewModel>

@{
    ViewData["Title"] = "Home Page";
}
<h1 class="text-center">Welcome to Book Library</h1>
<div class="container">
    <div class="row m-3">
        <div class="card-deck col-md-5">
            @foreach (var book in Model)
            {
                <div class="card ">
                    <img class="card-img-top" src="@book.ImageUrl" alt="@book.Title">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                    </div>
                    <div class="card-body">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning mb-5">Edit</a>
                            <form method="post">
                                <button id="deleteItem" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" onclick="return confirm('Are you sure you want to delete this book?');" class="btn btn-danger mb-5">Delete</button>
                            </form>
                        }
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="card-link">Details</a>
                        <form method="post">
                            <button asp-route-id="@book.Id" asp-controller="Book" asp-action="AddToMyBookList" type="submit" class="btn btn-primary">Add to My Books </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
        $('#deleteItem').on('shown.bs.modal', function () {
      $('#deleteItem').trigger('focus')
    })
</script>